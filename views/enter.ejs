  <body>
    <%- include('menu.html') %>
      <h1>글 작성</h1>
      <div class = "container mt-4">
        <form action = "/savemongo" method="post" enctype="multipart/form-data">
            <div class = "form-group">
            <label>제목</label>
            <input type="text" name = "title" class = "form-control">
            </div><p></p>
            <div class = "form-group">
            <label>내용</label>
            <textarea name = "content" rows = '10' class = "form-control" id="content"></textarea> 
            <!-- <script>
              CKEDITOR.replace('content');
          </script> -->
            <p></p>
            <label>텍스트 첨부</label>
            <input type="file" name = "file" class = "form-control" id="fileInput">
            </div><p></p>
           
            <!-- <div class="form-group">
            <label>작성일</label>
            <input type="date"  class="form-control" name ="someDate">
            </div><p></p>                 -->
            <button type = "submit" class="btn btn-warning" style="float:right">저장</button>

        </form>


        <label>사진 첨부</label>
        <form action="/photo" method="post" enctype="multipart/form-data">
        
          <input type="file" name="picture" accept = "image/*" class="form-control">
        </input>
        <button type="submit" class="btn btn-outline primary" >첨부(버튼을 꼭 눌러주세요)</button>
        </form>


      

    </div>
  </div>
 


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
  </body>
  <script>
    document.getElementById('fileInput').addEventListener('change', function(event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('content').value = e.target.result;
            };
            reader.readAsText(file, "EUC-KR", ""); // 파일 내용을 텍스트로 읽습니다.
        }
    });
</script>
</html>